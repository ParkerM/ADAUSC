<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:id="@+id/Background">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Total Number of Parking Spaces:"
        android:id="@+id/textTesting"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:paddingLeft="30dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/numberInput"
        android:layout_below="@+id/textTesting"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/calculate"
        android:id="@+id/button_calculate"
        android:layout_marginTop="50dp"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_below="@+id/OutputText"
        android:layout_alignLeft="@+id/numberInput"
        android:layout_alignStart="@+id/numberInput" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/testing"
        android:id="@+id/OutputText"
        android:visibility="invisible"
        android:layout_marginTop="29dp"
        android:paddingLeft="30dp"
        android:paddingRight="10dp"
        android:layout_below="@+id/numberInput"
        android:paddingTop="10dp"
        android:textSize="19sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/instructions"
        android:id="@+id/button_instruct"
        android:paddingLeft="55dp"
        android:paddingRight="55dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/button_calculate"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/calc_park_inst"
        android:id="@+id/instructText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:textSize="19sp"
        android:visibility="invisible"
        android:padding="15dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/button_instruct"
        android:layout_marginTop="10dp"
        android:password="false" />

</RelativeLayout>