<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Bathroom Quick Reference Info:"
        android:id="@+id/textTesting"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:paddingLeft="30dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wheelchair Accessible"
        android:id="@+id/btnWC"
        android:padding="15sp"
        android:layout_below="@+id/textTesting"
        android:layout_centerHorizontal="true"
        android:textSize="19sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ambulatory Accessible"
        android:id="@+id/btnAmb"
        android:padding="15sp"
        android:textSize="19sp"
        android:layout_below="@+id/btnWC"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12sp" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollViewInfo"
        android:fillViewport="true"
        android:scrollbars = "vertical"
        android:layout_below="@+id/btnAmb"
        android:layout_alignParentStart="false"
        android:layout_marginTop="15sp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/calc_park_inst"
            android:id="@+id/infoText"
            android:textSize="19sp"
            android:visibility="invisible"
            android:padding="15dp"
            >
        </TextView>
    </ScrollView>


</RelativeLayout>