<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Doors Quick Reference:"
        android:gravity="center"
        android:id="@+id/textHeader"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/textView4"
        android:textSize="17sp"
        android:paddingBottom="5sp"
        android:paddingLeft="15sp"
        android:paddingTop="5sp"
        android:paddingRight="15sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textHeader"
        android:layout_alignBottom="@+id/textHeader" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clearances for Swinging Doors"
        android:id="@+id/btnSwinging"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/btnSlidingFolding"
        android:layout_alignStart="@+id/btnSlidingFolding"
        android:layout_alignRight="@+id/btnSlidingFolding"
        android:layout_alignEnd="@+id/btnSlidingFolding" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clearances for Sliding/Folding Doors"
        android:id="@+id/btnSlidingFolding"
        android:padding="15sp"
        android:layout_below="@+id/btnSwinging"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7sp" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollViewInfo"
        android:fillViewport="true"
        android:scrollbars = "vertical"
        android:layout_below="@+id/btnSlidingFolding"
        android:layout_alignParentStart="false"
        android:layout_alignParentLeft="false"
        android:layout_marginTop="15sp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/calc_park_inst"
            android:id="@+id/infoText"
            android:textSize="19sp"
            android:visibility="invisible"
            android:padding="15dp"
            >
        </TextView>
    </ScrollView>

</RelativeLayout>