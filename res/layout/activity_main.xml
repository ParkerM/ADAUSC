<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.adausc.MainActivity" >

    <Button
        android:id="@+id/buttonBrowse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="18dp"
        android:minHeight="125dp"
        android:minWidth="150dp"
        android:text="Browse" />

    <Button
        android:id="@+id/buttonCalc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonBrowse"
        android:layout_alignBottom="@+id/buttonBrowse"
        android:layout_toRightOf="@+id/buttonBrowse"
        android:minHeight="125dp"
        android:minWidth="150dp"
        android:text="Calculator" />

    <Button
        android:id="@+id/buttonFavorites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonBrowse"
        android:layout_toLeftOf="@+id/buttonCalc"
        android:minHeight="125dp"
        android:minWidth="150dp"
        android:text="Favorites" />

    <Button
        android:id="@+id/buttonFullDoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonBrowse"
        android:layout_toRightOf="@+id/buttonBrowse"
        android:minHeight="125dp"
        android:minWidth="150dp"
        android:text="Full Document (2010)" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:maxWidth="300dp"
        android:text="ADA Standards"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/textAbout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/buttonFavorites"
        android:layout_marginRight="14dp"
        android:text="About"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textAbout"
        android:layout_alignBottom="@+id/textAbout"
        android:layout_alignLeft="@+id/buttonFullDoc"
        android:text="Contact"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textAbout"
        android:layout_alignBottom="@+id/textAbout"
        android:layout_centerHorizontal="true"
        android:text="|"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textAbout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"
        android:text="[Logo]"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="25sp" />

</RelativeLayout>